@model BugTrackerApplication.Models.UserRoleViewModel
@{
    ViewBag.Title = "ChangeRole";
}

    <section class="content">
        <p>
            User: @Model.Name
        </p>
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(p => p.Id)
            @Html.ListBoxFor(p => p.SelectedRoles, Model.Roles)
            <input type="submit" value="Submit!" />
        }
    </section>
   